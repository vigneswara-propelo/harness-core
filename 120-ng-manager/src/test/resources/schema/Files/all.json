        "description": {
          "type": "string"
        },
        "draft": {
          "type": "boolean",
          "readOnly": true
        },
        "fileUsage": {
          "type": "string",
          "enum": [
            "MANIFEST_FILE",
            "CONFIG",
            "SCRIPT"
          ]
        },
        "identifier": {
          "type": "string"
        },
        "mimeType": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "orgIdentifier": {
          "type": "string"
