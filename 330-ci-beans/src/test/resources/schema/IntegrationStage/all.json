{
  "type": "object",
  "required": [
    "infrastructure"
  ],
  "properties": {
    "cloneCodebase": {
      "type": "boolean"
    },
    "execution": {
      "$ref": "#/definitions/ExecutionElementConfig"
    },
    "infrastructure": {
      "oneOf": [
        {
          "$ref": "#/definitions/K8sDirectInfraYaml"
        },
        {
          "$ref": "#/definitions/UseFromStageInfraYaml"
        }
      ]
    },
    "serviceDependencies": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/DependencyElement"
      }
    },
    "sharedPaths": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
