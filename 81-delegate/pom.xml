            <properties>
                <deployHost>ec2-50-16-106-255.compute-1.amazonaws.com</deployHost>
                <deployUsername>ubuntu</deployUsername>
                <accountId>kmpySmUISimoRrJL6NL73w</accountId>
                <accountSecret>2f6b0988b6fb3370073c3d0505baee59</accountSecret>
